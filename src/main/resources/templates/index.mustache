{{>layout/header}}

    <h1>스프링 부트로 시작하는 웹 서비스 Ver.3</h1>

    <div class="col-md-12">

        <!-- 글 쓰기 / 로그인 영역-->

        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글등록</a>
                {{#name}}
                    <span id="user">{{name}}님 어서오세요!</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/name}}
                {{^name}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google 로그인</a>

                    <a href="/oauth2/authorization/naver"  class="btn btn-secondary active" role="button">Naver 로그인</a>
                {{/name}}
            </div>
        </div>
        <br>

        <!-- 목록 출력-->

        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
                <tr>
                    <th>게시글 번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
                {{#posts}}
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}